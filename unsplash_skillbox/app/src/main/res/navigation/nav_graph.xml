<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.skillbox.unsplash.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.skillbox.unsplash.auth.AuthFragment"
        android:label="AuthFragment">
        <action
            android:id="@+id/action_authFragment_to_appFragment"
            app:destination="@id/appFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.skillbox.unsplash.onboarding.fragment.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/appFragment"
        android:name="com.skillbox.unsplash.app.AppFragment"
        android:label="AppFragment" />
    <fragment
        android:id="@+id/navigation_images"
        android:name="com.skillbox.unsplash.app.images.ImagesFragment"
        android:label="ImagesFragment" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.skillbox.unsplash.app.account.AccountFragment"
        android:label="AccountFragment" />
    <fragment
        android:id="@+id/navigation_collection"
        android:name="com.skillbox.unsplash.app.collections.CollectionsFragment"
        android:label="CollectionsFragment" />
</navigation>