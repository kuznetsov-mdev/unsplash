<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.skillbox.unsplash.feature.onboarding.OnBoardingFragment"
        tools:layout="@layout/fragment_on_boarding"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        tools:layout="@layout/fragment_auth"
        android:name="com.skillbox.unsplash.feature.auth.AuthFragment"
        android:label="AuthFragment">
        <action
            android:id="@+id/action_authFragment_to_appFragment"
            app:destination="@id/bottomNavBarFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.skillbox.unsplash.feature.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/onBoardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/bottomNavBarFragment"
        android:name="com.skillbox.unsplash.feature.BottomNavBarFragment"
        android:label="BottomNavBarFragment"
        tools:layout="@layout/fragment_bottom_nav_bar" />
    <fragment
        android:id="@+id/navigation_images"
        android:name="com.skillbox.unsplash.feature.imagelist.ImagesFragment"
        tools:layout="@layout/fragment_images"
        android:label="ImagesFragment" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.skillbox.unsplash.feature.account.AccountFragment"
        tools:layout="@layout/fragment_account"
        android:label="AccountFragment" />
    <fragment
        android:id="@+id/navigation_collections"
        android:name="com.skillbox.unsplash.feature.collections.CollectionsFragment"
        tools:layout="@layout/fragment_collections"
        android:label="CollectionsFragment" />
</navigation>