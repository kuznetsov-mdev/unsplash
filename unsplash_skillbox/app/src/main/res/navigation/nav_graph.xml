<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.skillbox.unsplash.onboarding.OnBoardingFragment"
        tools:layout="@layout/fragment_on_boarding"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        tools:layout="@layout/fragment_auth"
        android:name="com.skillbox.unsplash.auth.AuthFragment"
        android:label="AuthFragment">
        <action
            android:id="@+id/action_authFragment_to_appFragment"
            app:destination="@id/appFragment" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.skillbox.unsplash.StartFragment"
        tools:layout="@layout/fragment_start"
        android:label="StartFragment">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/onBoardingFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/appFragment"
        android:name="com.skillbox.unsplash.app.AppFragment"
        tools:layout="@layout/fragment_app"
        android:label="AppFragment" />
    <fragment
        android:id="@+id/navigation_images"
        android:name="com.skillbox.unsplash.app.images.ImagesFragment"
        tools:layout="@layout/fragment_images"
        android:label="ImagesFragment" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.skillbox.unsplash.app.account.AccountFragment"
        tools:layout="@layout/fragment_account"
        android:label="AccountFragment" />
    <fragment
        android:id="@+id/navigation_collections"
        android:name="com.skillbox.unsplash.app.collections.CollectionsFragment"
        tools:layout="@layout/fragment_collections"
        android:label="CollectionsFragment" />
</navigation>